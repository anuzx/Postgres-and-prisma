

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//one to many reln

model User{
  id             Int       @id   @default(autoincrement())
  username       String    @unique
  password       String
  firstname      String?
  lastname       String?
  todos          Todo[]
}

model Todo{
  id             Int       @id  @default(autoincrement())
  title          String
  description    String
  done           Boolean   @default(false)
  userId         Int
  user           User      @relation(fields: [userId] , references: [id])


}